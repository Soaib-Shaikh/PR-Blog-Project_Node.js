<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BlogSpace - Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Header */
    .navbar {
      background-color: #fff !important;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 12px 20px;
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.4rem;
      color: #4b00ff !important;
    }

    .nav-link {
      font-weight: 500;
      margin-right: 15px;
      color: #333 !important;
      transition: color 0.3s ease;
    }

    .nav-link:hover {
      color: #4b00ff !important;
    }

    .user-info {
      font-size: 16px;
      font-weight: 600;
      margin-right: 15px;
      color: #333 !important;
    }

    .logout-btn {
      background-color: #ff4757;
      border: none;
      color: white;
      padding: 6px 14px;
      border-radius: 8px;
      font-weight: 500;
      transition: 0.3s;
    }

    .logout-btn:hover {
      background-color: #e84118;
    }

    /* Blog Cards */
    .card-clean {
      border: 0;
      background: #fff;
      box-shadow: 0 4px 14px rgba(0, 0, 0, .08);
      border-radius: 14px;
      overflow: hidden;
      transition: transform 0.2s ease-in-out;
    }

    .card-clean:hover {
      transform: translateY(-5px);
    }

    .thumb {
      position: relative;
    }

    .thumb img {
      width: 100%;
      display: block;
    }

    .overlay {
      position: absolute;
      inset: auto 0 0 0;
      padding: 14px 16px;
      background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, .75) 100%);
      color: #fff;
    }

    .overlay h6 {
      margin: 0 0 4px;
      font-weight: 700;
    }

    .overlay small {
      opacity: .85;
    }

    /* Section Title */
    .section-title {
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 20px;
    }
  </style>
</head>

<body>

  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/blog">My Blog</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav me-3">
          <li class="nav-item">
            <a class="nav-link" href="/blog">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/write">Create Blog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">My Profile</a>
          </li>
        </ul>

        <% if(user) { %>
          <span class="user-info text-white me-3">ðŸ‘¤ <%= user.username %></span>
          <form action="/logout" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm">Logout</button>
          </form>
          <% } else { %>
            <a href="/login" class="btn btn-primary">Login</a>
            <% } %>
      </div>
    </div>
  </nav>


  <!-- Blog Section -->
  <div class="container my-5">
    <h2 class="section-title">Latest Blogs</h2>

    <% const features=posts.slice(0, 2); const rest=posts.slice(2, 6); %>

      <!-- Two Feature Cards -->
      <div class="row g-3">
        <% features.forEach(p=> { %>
          <div class="col-md-6">
            <a href="/posts/<%= p._id %>" class="text-decoration-none">
              <div class="card-clean">
                <div class="thumb">
                  <img src="<%= p.coverUrl || 'https://picsum.photos/800/500?blur=4' %>" alt="Cover Image"
                    style="max-width:100%;height:auto;">
                  
                  <div class="overlay">
                    <h6>
                      <%= p.title %>
                    </h6>
                    <small>By <%= p.author?.username %></small>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <% }) %>
      </div>

      <!-- Four Smaller Cards -->
      <div class="row g-3 mt-3">
        <% rest.forEach(p=> { %>
          <div class="col-md-3">
            <a href="/posts/<%= p._id %>" class="text-decoration-none">
              <div class="card-clean">
                <div class="thumb">
                  <img src="<%= p.coverUrl || 'https://picsum.photos/800/500?blur=4' %>" alt="Cover Image"
                    style="width:100%; height:auto;"
                    onerror="this.onerror=null;this.src='https://picsum.photos/800/500?blur=4';">

                  <div class="overlay">
                    <h6 class="small">
                      <%= p.title %>
                    </h6>
                    <small>By <%= p.author?.username %></small>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <% }) %>
      </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>