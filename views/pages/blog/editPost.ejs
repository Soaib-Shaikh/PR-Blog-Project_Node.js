<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Post</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .navbar {
      background-color: #fff !important;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 12px 20px;
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.4rem;
      color: #4b00ff !important;
    }

    .nav-link {
      font-weight: 500;
      margin-right: 15px;
      color: #333 !important;
      transition: color 0.3s ease;
    }

    .nav-link:hover {
      color: #4b00ff !important;
    }

    .user-info {
      font-size: 16px;
      font-weight: 600;
      margin-right: 15px;
      color: #333 !important;
    }

    .logout-btn {
      background-color: #ff4757;
      border: none;
      color: white;
      padding: 6px 14px;
      border-radius: 8px;
      font-weight: 500;
      transition: 0.3s;
    }

    .logout-btn:hover {
      background-color: #e84118;
    }

    .edit-container {
      max-width: 650px;
      background: #fff;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      margin-top: 40px;
    }
    img.preview-img {
      max-height: 160px;
      border-radius: 6px;
      margin-top: 8px;
      box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/blog">My Blog</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav me-3">
          <li class="nav-item">
            <a class="nav-link" href="/blog">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/write">Create Blog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">My Profile</a>
          </li>
        </ul>

        <% if(user) { %>
          <span class="user-info text-white me-3">üë§ <%= user.username %></span>
          <form action="/logout" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm">Logout</button>
          </form>
          <% } else { %>
            <a href="/login" class="btn btn-primary">Login</a>
            <% } %>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="edit-container mx-auto">
      <h3 class="text-center mb-4">‚úèÔ∏è Edit Blog Post</h3>

      <!-- IMPORTANT: action matches your route -->
      <form action="/posts/edit/<%= post._id %>" method="POST" enctype="multipart/form-data">
        <!-- Title -->
        <div class="mb-3">
          <label class="form-label fw-bold">Title</label>
          <input type="text" name="title" class="form-control" value="<%= post.title %>" required>
        </div>

        <!-- Body -->
        <div class="mb-3">
          <label class="form-label fw-bold">Body</label>
          <textarea name="body" class="form-control" rows="5" required><%= post.body %></textarea>
        </div>

        <!-- Cover Image -->
        <div class="mb-3">
          <label class="form-label fw-bold">Change Cover Image</label>
          <input type="file" name="cover" class="form-control" id="coverInput" accept="image/*">

          <% if (post.coverUrl) { %>
            <img src="<%= post.coverUrl %>" id="preview" class="preview-img mt-2" alt="Cover Image">
          <% } else { %>
            <img id="preview" class="preview-img mt-2 d-none" alt="Preview">
          <% } %>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between">
          <button class="btn btn-primary px-4">üíæ Update</button>
          <a href="/posts/<%= post._id %>" class="btn btn-secondary px-4">Cancel</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Live Preview Script -->
  <script>
    const coverInput = document.getElementById('coverInput');
    const preview = document.getElementById('preview');

    coverInput.addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
          preview.classList.remove('d-none');
        }
        reader.readAsDataURL(file);
      }
    });
  </script>
</body>
</html>
