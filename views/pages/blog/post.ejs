<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= post.title %> â€¢ Inkwell</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Header */
    .navbar {
      background-color: #fff !important;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 12px 20px;
    }
    .navbar-brand {
      font-weight: 700;
      font-size: 1.4rem;
      color: #4b00ff !important;
    }
    .nav-link {
      font-weight: 500;
      margin-right: 15px;
      color: #333 !important;
      transition: color 0.3s ease;
    }
    .nav-link:hover {
      color: #4b00ff !important;
    }

    /* Back Button */
    .back-btn {
      display: inline-block;
      background-color: #4b00ff;
      color: white;
      padding: 6px 16px;
      border-radius: 6px;
      font-weight: 500;
      text-decoration: none;
      transition: 0.3s;
      margin-bottom: 15px;
    }
    .back-btn:hover {
      background-color: #3500cc;
      text-decoration: none;
      color: #fff;
    }

    /* Post Image */
    .post-img {
      max-width: 100%;
      max-height: 450px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 15px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    /* Like Button */
    .like-btn {
      background-color: #ff4b5c;
      color: white;
      padding: 6px 14px;
      border: none;
      border-radius: 6px;
      font-weight: 600;
      transition: 0.3s;
    }
    .like-btn:hover {
      background-color: #e84118;
      transform: scale(1.05);
    }

    /* Edit & Delete Buttons */
    .action-btn {
      padding: 6px 14px;
      border-radius: 6px;
      font-weight: 600;
      margin-left: 10px;
      transition: 0.3s;
    }
    .edit-btn {
      background-color: #00a8ff;
      color: white;
    }
    .edit-btn:hover {
      background-color: #0091e6;
      transform: scale(1.05);
    }
    .delete-btn {
      background-color: #ff4757;
      color: white;
    }
    .delete-btn:hover {
      background-color: #e84118;
      transform: scale(1.05);
    }
  </style>
</head>
<body>
  <!-- Header/Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/blog">My Blog</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav me-3">
                <li class="nav-item">
                    <a class="nav-link" href="/blog">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/write">Create Blog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">My Profile</a>
                </li>
            </ul>

            <% if(user) { %>
                <span class="user-info text-white me-3">ðŸ‘¤ <%= user.username %></span>
                <form action="/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                </form>
            <% } else { %>
                <a href="/login" class="btn btn-primary">Login</a>
            <% } %>
        </div>
    </div>
  </nav>

  <div class="container">
    <div class="main-card mx-auto mt-3" style="max-width: 850px;">
      <!-- Back Button -->
      <a href="/blog" class="back-btn"><i class="bi bi-arrow-left"></i> Back</a>

      <!-- Post Title -->
      <div class="post-title mt-2 mb-1 fs-3 fw-bold"><%= post.title %></div>
      <div class="post-meta mb-3 text-muted">
        by <%= post.author ? post.author.username : "Unknown Author" %>
      </div>

      <!-- Post Image -->
      <% if (post.coverUrl) { %>
        <img class="img-fluid post-img" src="<%= post.coverUrl %>" alt="">
      <% } %>

      <!-- Post Body -->
      <div class="mb-4" style="font-size:1.1rem;line-height:1.7;">
        <%= post.body %>
      </div>

      <!-- âœ… Like + Edit + Delete Buttons -->
      <div class="d-flex align-items-center mb-4">
        <!-- Like Button -->
        <form method="POST" action="/posts/<%= post._id %>/like">
          <button class="btn like-btn btn-sm">
            <i class="bi bi-heart-fill"></i> Like (<%= post.likes.length %>)
          </button>
        </form>

        <% if (user && post.author && String(user._id) === String(post.author._id)) { %>
          <!-- Edit Button -->
          <a href="/posts/edit/<%= post._id %>" class="action-btn edit-btn btn-sm">
            <i class="bi bi-pencil"></i> Edit
          </a>

          <!-- Delete Button -->
          <form action="/posts/delete/<%= post._id %>" method="POST" class="d-inline">
            <button type="submit" class="action-btn delete-btn btn-sm" onclick="return confirm('Are you sure?')">
              <i class="bi bi-trash"></i> Delete
            </button>
          </form>
        <% } %>
      </div>

      <!-- Comments Section -->
      <h5 class="mb-3">Comments</h5>
      <form method="POST" action="/posts/<%= post._id %>/comments" class="mb-3">
        <textarea class="form-control mb-2" name="body" required rows="3" placeholder="Write a comment"></textarea>
        <button class="btn btn-outline-dark btn-sm">Comment</button>
      </form>

      <ul class="list-group comment-list">
        <% post.comments.slice().reverse().forEach(c => { %>
          <li class="list-group-item">
            <b><%= c.author?.username || 'User' %>:</b> <%= c.body %>
            <div class="text-muted small"><%= new Date(c.createdAt).toLocaleString() %></div>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</body>
</html>
