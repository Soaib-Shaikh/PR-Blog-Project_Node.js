<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Write ‚Ä¢ Myblog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .navbar {
      background-color: #fff !important;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 12px 20px;
    }
    .navbar-brand {
      font-weight: 700;
      font-size: 1.4rem;
      color: #4b00ff !important;
    }
    .nav-link {
      font-weight: 500;
      margin-right: 15px;
      color: #333 !important;
      transition: color 0.3s ease;
    }
    .nav-link:hover {
      color: #4b00ff !important;
    }
    .user-info {
      font-size: 16px;
      font-weight: 600;
      margin-right: 15px;
      color: #333 !important;
    }
    .logout-btn {
      background-color: #ff4757;
      border: none;
      color: white;
      padding: 6px 14px;
      border-radius: 8px;
      font-weight: 500;
      transition: 0.3s;
    }
    .logout-btn:hover {
      background-color: #e84118;
    }
    .publish-btn {
      background-color: #4b00ff;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 8px;
    }
    .publish-btn:hover {
      background-color: #3700b3;
    }
  </style>
</head>
<body>
  <!-- Header/Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/blog">My Blog</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav me-3">
                <li class="nav-item">
                    <a class="nav-link" href="/blog">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/write">Create Blog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">My Profile</a>
                </li>
            </ul>

            <% if(user) { %>
                <span class="user-info text-white me-3">üë§ <%= user.username %></span>
                <form action="/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                </form>
            <% } else { %>
                <a href="/login" class="btn btn-primary">Login</a>
            <% } %>
        </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="main-card mx-auto" style="max-width: 900px;">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold m-0">Create a new post</h3>
        <a class="btn btn-outline-secondary" href="/blog">‚Üê Back to feed</a>
      </div>

      <!-- Blog Create Form -->
      <form action="/posts" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label">Title</label>
          <input name="title" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Cover Image</label>
          <input type="file" name="cover" class="form-control" accept="image/*">
          <div class="form-text">JPG/PNG/WebP. Large images will be resized.</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Body</label>
          <textarea name="body" class="form-control" rows="10" required></textarea>
        </div>
        <div class="text-end">
          <button class="publish-btn" type="submit">Publish</button>
        </div>
      </form>

      <!-- Display User's Blogs -->
      <hr class="my-4">
      <h4 class="mb-3">My Blogs</h4>
      
      <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.body.substring(0, 100) %>...</p>
              <div class="d-flex gap-2">
                <a href="/posts/edit/<%= post._id %>" class="btn btn-warning btn-sm">Edit</a>
                <form action="/posts/delete/<%= post._id %>" method="POST" onsubmit="return confirm('Are you sure?');">
                  <button class="btn btn-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-muted">You haven't created any blogs yet.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
