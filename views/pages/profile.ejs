<!doctype html>
<html lang="en">

<head>
    <title>My Profile</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 12px 20px;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            color: #4b00ff !important;
        }

        .nav-link {
            font-weight: 500;
            margin-right: 15px;
            color: #f7f5f5 !important;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #4b00ff !important;
        }

        .user-info {
            font-size: 16px;
            font-weight: 600;
            margin-right: 15px;
        }

        .logout-btn {
            background-color: #ff4757;
            border: none;
            color: white;
            padding: 6px 14px;
            border-radius: 8px;
            font-weight: 500;
            transition: 0.3s;
        }

        .logout-btn:hover {
            background-color: #e84118;
        }
    </style>
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/blog">My Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav me-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/blog">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/write">Create Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">My Profile</a>
                    </li>
                </ul>

                <% if(user) { %>
                    <span class="user-info text-white me-3">ðŸ‘¤ <%= user.username %></span>
                    <form action="/logout" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                    </form>
                    <% } else { %>
                        <a href="/login" class="btn btn-primary">Login</a>
                        <% } %>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="card shadow-lg p-4 rounded">
            <h2 class="text-center mb-4">My Profile</h2>

            <!-- User Details -->
            <div class="mb-3">
                <label class="form-label fw-bold">Username:</label>
                <p class="form-control bg-light">
                    <%= user.username %>
                </p>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Email:</label>
                <p class="form-control bg-light">
                    <%= user.email %>
                </p>
            </div>

            <hr class="my-4">

            <!-- Edit Form -->
            <h4>Edit Profile</h4>
            <form action="/user/profile/edit" method="POST">
                <div class="mb-3">
                    <label class="form-label">Update Username</label>
                    <input type="text" name="username" class="form-control" value="<%= user.username %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Update Email</label>
                    <input type="email" name="email" class="form-control" value="<%= user.email %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" name="password" class="form-control"
                        placeholder="Leave empty if you don't want to change">
                </div>
                <button type="submit" class="btn btn-success">Update Profile</button>
                <a href="/" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</body>

</html>