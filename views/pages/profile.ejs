<!doctype html>
<html lang="en">
<head>
    <title>My Profile</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background-color: #f4f6f9;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: #ffffff !important;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
            padding: 12px 20px;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #4b00ff !important;
        }

        .nav-link {
            font-weight: 500;
            margin-right: 15px;
            color: #333 !important;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #4b00ff !important;
        }

        .user-info {
            font-size: 16px;
            font-weight: 600;
            margin-right: 15px;
            color: #444;
        }

        .logout-btn {
            background-color: #ff4757;
            border: none;
            color: white;
            padding: 6px 14px;
            border-radius: 8px;
            font-weight: 500;
            transition: 0.3s;
        }

        .logout-btn:hover {
            background-color: #e84118;
        }

        /* Profile Container */
        .profile-container {
            max-width: 700px;
            margin: 50px auto;
        }

        /* Profile Card */
        .profile-card {
            background: #fff;
            border-radius: 15px;
            padding: 35px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            transition: 0.3s ease-in-out;
            text-align: center;
        }

        .profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
        }

        /* Avatar */
        .profile-avatar {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid #4b00ff;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            margin-bottom: 15px;
        }

        /* Heading */
        .profile-header h2 {
            font-weight: 700;
            color: #222;
            margin-bottom: 5px;
        }

        .profile-header p {
            color: #666;
            font-size: 15px;
        }

        /* Profile Details */
        .profile-details {
            text-align: left;
            margin-top: 20px;
        }

        .profile-details label {
            font-weight: 600;
            color: #555;
        }

        .profile-details p {
            background-color: #f1f3f6;
            padding: 10px 15px;
            border-radius: 8px;
            margin-bottom: 15px;
            color: #333;
            border: 1px solid #e3e6ea;
        }

        /* Buttons */
        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 25px;
        }

        .action-buttons .btn {
            width: 48%;
            padding: 12px;
            font-weight: bold;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease-in-out;
        }

        .btn-success:hover {
            background-color: #0b9d58;
            transform: scale(1.05);
        }

        .btn-danger:hover {
            background-color: #d32f2f;
            transform: scale(1.05);
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .action-buttons {
                flex-direction: column;
                gap: 12px;
            }

            .action-buttons .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/blog">My Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav me-3">
                    <li class="nav-item"><a class="nav-link" href="/blog">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/write">Create Blog</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/profile">My Profile</a></li>
                </ul>

                <% if(user) { %>
                    <span class="user-info">üë§ <%= user.username %></span>
                    <form action="/logout" method="POST" class="d-inline">
                        <button type="submit" class="logout-btn">Logout</button>
                    </form>
                <% } else { %>
                    <a href="/login" class="btn btn-primary">Login</a>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Profile Section -->
    <div class="container profile-container">
        <div class="profile-card">

            <!-- Profile Header -->
            <div class="profile-header">
                <h2>Welcome, <%= user.username %> üëã</h2>
                <p>Manage your account and personal details</p>
            </div>

            <!-- Profile Details -->
            <div class="profile-details">
                <label>Username:</label>
                <p><%= user.username %></p>

                <label>Email:</label>
                <p><%= user.email %></p>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="/user/profile/edit" class="btn btn-success">‚úèÔ∏è Edit Profile</a>
                <button id="deleteBtn" type="button" class="btn btn-danger">üóëÔ∏è Delete Profile</button>
            </div>

            <!-- Hidden Delete Form -->
            <form id="deleteForm" action="/user/profile/delete" method="POST" style="display:none;"></form>
        </div>
    </div>

    <script>
        // SweetAlert2 Confirmation for Delete
        document.getElementById("deleteBtn").addEventListener("click", function () {
            Swal.fire({
                title: "Are you sure?",
                text: "Your account will be permanently deleted!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("deleteForm").submit();
                }
            });
        });
    </script>
</body>
</html>
