<!doctype html>
<html lang="en">

<head>
    <title>My Profile</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/blog">My Blog</a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav me-3">
                    <li class="nav-item"><a class="nav-link" href="/blog">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/write">Create Blog</a></li>
                    <li class="nav-item"><a class="nav-link" href="/profile">My Profile</a></li>
                </ul>
                <% if(user) { %>
                    <span class="user-info text-white me-3">ðŸ‘¤ <%= user.username %></span>
                    <form action="/logout" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                    </form>
                <% } else { %>
                    <a href="/login" class="btn btn-primary">Login</a>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Profile Section -->
    <div class="container mt-5">
        <div class="card shadow-lg p-4 rounded">
            <h2 class="text-center mb-4">My Profile</h2>

            <!-- User Details -->
            <div class="mb-3">
                <label class="form-label fw-bold">Username:</label>
                <p class="form-control bg-light"><%= user.username %></p>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Email:</label>
                <p class="form-control bg-light"><%= user.email %></p>
            </div>

            <hr class="my-4">

            <!-- Edit + Delete Profile Form -->
            <h4>Edit Profile</h4>
            <form id="profileForm" action="/user/profile/edit" method="POST">
                <div class="mb-3">
                    <label class="form-label">Update Username</label>
                    <input type="text" name="username" class="form-control" value="<%= user.username %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Update Email</label>
                    <input type="email" name="email" class="form-control" value="<%= user.email %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" name="password" class="form-control"
                        placeholder="Leave empty if you don't want to change">
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-evenly">
                    <button type="submit" class="btn btn-success">Update Profile</button>
                    <button id="deleteBtn" type="button" class="btn btn-danger">Delete Profile</button>
                    <a href="/" class="btn btn-secondary">Back</a>
                </div>
            </form>

            <!-- Hidden Delete Form -->
            <form id="deleteForm" action="/user/profile/delete" method="POST" style="display:none;"></form>
        </div>
    </div>

    <script>
        // SweetAlert2 Confirmation for Delete
        document.getElementById("deleteBtn").addEventListener("click", function () {
            Swal.fire({
                title: "Are you sure?",
                text: "Your account will be permanently deleted!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("deleteForm").submit(); // âœ… POST request
                }
            });
        });
    </script>
</body>
</html>
