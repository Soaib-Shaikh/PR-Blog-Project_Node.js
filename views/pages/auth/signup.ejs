      border-radius: 15px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.7);
      padding: 2.5rem 2rem;
      max-width: 420px;
      width: 100%;
      color: #fff;
      transition: all 0.3s ease;
    }

    /* Logo image */
    .auth-box .text-center img {
      width: 120px;
      margin-bottom: 1.5rem;
      filter: drop-shadow(0 0 8px rgba(0, 0, 0, 0.5));
    }

    /* Input group */
    .input-group-text {
      background: rgba(255, 255, 255, 0.15);
      border: none;
      color: #1de9b6;
    }

    .input-group-text i.mdi {
      font-size: 1.3rem;
    }

    /* Inputs */
    input.form-control.form-control-lg {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid transparent;
      color: #fff;
      font-weight: 500;
      transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    input.form-control.form-control-lg::placeholder {
      color: #c7c7c7;
      opacity: 1;
    }

    input.form-control.form-control-lg:focus {
      background: rgba(29, 233, 182, 0.15);
      border-color: #1de9b6;
      color: #1de9b6;
      box-shadow: 0 0 8px #1de9b6;
      outline: none;
    }

    /* Password mismatch message */
    #password-mismatch {
      font-style: italic;
      font-size: 0.9rem;
      margin-top: -15px;
      margin-bottom: 10px;
      color: #ff4d4f;
    }

    /* Submit button */
    .btn-info {
      background-color: #1de9b6;
      border: none;
      font-weight: 600;
      letter-spacing: 0.05em;
      padding: 0.75rem 1.2rem;
      color: #000 !important;
      transition: background-color 0.3s ease;
      border-radius: 8px;
    }

    .btn-info:hover,
    .btn-info:focus {
      background-color: #13b49b;
      color: #000 !important;
      box-shadow: 0 0 15px #1de9b6;
      outline: none;
    }

    /* Login link styling */
    #login-link {
      color: #1de9b6;
      font-weight: 600;
      text-decoration: none;
      font-size: 1rem;
      transition: color 0.2s ease;
    }

    #login-link:hover {
      color: #13b49b;
      text-decoration: underline;
    }

    /* Responsive */
